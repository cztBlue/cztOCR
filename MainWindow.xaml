<Window
    x:Class="cztOCR.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:cztOCR"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    Title="cztOCR"
    Width="800"
    Height="600"
    mc:Ignorable="d">

    <!--  在Window.Resources中定义托盘菜单  -->
    <Window.Resources>
        <ContextMenu x:Key="TrayMenu">
            <MenuItem Click="RestoreWindow_Click" Header="打开" />
            <Separator />
            <MenuItem Click="ExitApplication_Click" Header="退出" />
        </ContextMenu>
    </Window.Resources>



    <DockPanel>
        <tb:TaskbarIcon
            x:Name="MyTrayIcon"
            ContextMenu="{StaticResource TrayMenu}"
            IconSource="appicon.ico"
            ToolTipText="OCR程序"
            TrayMouseDoubleClick="RestoreWindow_Click" />
        <!--  顶部菜单栏  -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="文件">
                <MenuItem Click="OpenImage_Click" Header="打开图片" />
                <MenuItem Click="Exit_Click" Header="退出" />
            </MenuItem>
            <MenuItem Click="OpenSettings_Click" Header="设置" />
            <MenuItem Click="OpenHistory_Click" Header="历史记录" />
        </Menu>

        <!--  主内容区域  -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <!--  图片 & 结果区域  -->
                <RowDefinition Height="*" />
                <!--  Prompt 编辑框  -->
                <!--<RowDefinition Height="Auto" />-->
                <!--  控制按钮  -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <!--  添加托盘图标控件  -->


            <!--  图片预览  -->
            <Border
                Grid.Row="0"
                Grid.Column="0"
                Margin="5,5,5,0"
                BorderBrush="Gray"
                BorderThickness="1">
                <Grid>
                    <Image
                        x:Name="PreviewImage"
                        Source="{Binding Source={x:Static local:CurrentImageStream.Instance}, Path=CurrentImage}"
                        Stretch="Uniform" />
                    <!--  可折叠的 Prompt 编辑框  -->
                    <Expander
                        Margin="5,0,5,5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Header="后处理Prompt (点击展开)"
                        IsExpanded="False">
                        <Expander.Content>
                            <TextBox
                                x:Name="PromptTextBox"
                                Height="80"
                                Margin="5"
                                HorizontalAlignment="Stretch"
                                AcceptsReturn="True"
                                FontSize="14"
                                LostFocus="PromptTextBox_LostFocus"
                                Text="{Binding Source={StaticResource ConfigDataProvider}, Path=Prompt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto">
                                <TextBox.Foreground>
                                    <SolidColorBrush Color="Gray" />
                                </TextBox.Foreground>
                            </TextBox>
                        </Expander.Content>
                    </Expander>
                </Grid>
            </Border>


            <!--  OCR文本框  -->
            <Border
                Grid.Row="0"
                Grid.Column="1"
                Margin="5,5,5,0"
                BorderBrush="Gray"
                BorderThickness="1">

                <TextBox
                    x:Name="OcrTextBox"
                    AcceptsReturn="True"
                    FontSize="14"
                    IsReadOnly="False"
                    Text="识别结果将在此显示..."
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </Border>


            <!--  控制按钮区  -->
            <StackPanel
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <CheckBox
                    x:Name="AutoLoadClipboardCheck"
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Checked="AutoLoadClipboard_CheckedChanged"
                    Content="自动载入剪贴板"
                    IsChecked="{Binding IsDetected}"
                    Unchecked="AutoLoadClipboard_CheckedChanged" />
                <CheckBox
                    x:Name="AutoOCRWhenActivate"
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Content="激活时自动OCR"
                    IsChecked="{Binding IsAutoOCR}" />
                <Button
                    Width="100"
                    Margin="5,0"
                    Click="LoadClipboard_Click"
                    Content="从剪贴板载入" />
                <Button
                    Width="100"
                    Margin="5,0"
                    Click="OpenImage_Click"
                    Content="载入图片" />

                <Button
                    Width="100"
                    Margin="5,0"
                    Click="StartOcr_Click"
                    Content="开始识别" />
                <Button
                    Width="100"
                    Margin="5,0"
                    Click="CheckApi_Click"
                    Content="AI 校对" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>